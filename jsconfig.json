{
	"compilerOptions": {
		"target": "es6",
		"module": "ESNext",
		"lib": ["ES2017", "ES7", "ES6", "DOM", "DOM.Iterable"],
		"checkJs": true,
		"jsx": "react",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"removeComments": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noEmitHelpers": false,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"components/*": ["./src/components/*"],
			"helpers/*": ["./src/helpers/*"],
			"pages/*": ["./pages/*"]
		},
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./src/**/*", "./pages/**/*"],
	"exclude": ["node_modules", "dist"]
}
